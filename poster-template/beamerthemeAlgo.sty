\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.2\paperwidth}
        \vspace{12ex}
        \begin{center}
          \includegraphics[width=.6\linewidth]{unsw_logo}
        \end{center}
        \vspace{12ex}
      \end{column}
      \begin{column}{.76\paperwidth}
        \vspace{6ex}
        %\raggedleft
        \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge{\clancyfont \inserttitle}}\\[4ex]}
        \usebeamercolor{author in headline}{\color{fg}\large{\robotomonofont \insertauthor}\\[2ex]}
        \usebeamercolor{institute in headline}{\color{fg}\large{\robotomonofont \insertinstitute}\\[1ex]}
      \end{column}
    \end{columns}
  \end{beamercolorbox}
}

