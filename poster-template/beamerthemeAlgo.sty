\definecolor{unsw@yellow}{RGB}{255, 220, 0}  % #ffe600
\definecolor{unsw@black}{RGB}{0, 0, 0}       % #000000ff
\definecolor{unsw@white}{RGB}{255, 255, 255} % #ffffffff
\definecolor{unsw@indigo}{RGB}{63, 97, 196}  % #3f61c4ff
\definecolor{unsw@red}{RGB}{255, 99, 93}     % #ff635dff
\definecolor{unsw@green}{RGB}{26, 201, 135}  % #1ac987ff
\definecolor{unsw@pink}{RGB}{250, 145, 182}  % #fa91b6ff
\definecolor{unsw@blue}{RGB}{45, 170, 226}   % #2daae2ff
%\definecolor{unsw@darkblue}{RGB}{25, 150, 206}
\definecolor{unsw@teal}{RGB}{0, 120, 130}    % #007882ff
\definecolor{unsw@purple}{RGB}{138, 104, 200}% #8a68c8ff
\definecolor{unsw@orange}{RGB}{255, 130, 0}  % #ff8200ff

\setbeamercolor{headline}{fg=unsw@black, bg=unsw@yellow}
\setbeamercolor{title in headline}{fg=unsw@black}
\setbeamercolor{author in headline}{fg=unsw@black}
\setbeamercolor{institute in headline}{fg=unsw@black}

\setbeamercolor*{normal text}{fg=unsw@black, bg=unsw@white}

\setbeamertemplate{itemize items}[circle]
\setbeamercolor{item}{fg=unsw@black}
\setbeamerfont{alerted text}{family=\robotomonofont}
\setbeamercolor{alerted text}{fg=unsw@black}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

