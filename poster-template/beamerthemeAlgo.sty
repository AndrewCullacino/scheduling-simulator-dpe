\RequirePackage[most]{tcolorbox}
\tcbset{
  colback=unsw@yellow!20,
  colframe=unsw@yellow,
  fonttitle=\bfseries,
  coltitle=unsw@white,
  boxrule=1pt,
  arc=6pt,
  auto outer arc,
  boxsep=1ex,
  left=10pt,
  right=10pt,
  top=10pt,
  bottom=10pt,
  beforeafter skip=1ex
}

% primary color box
\newtcolorbox{mybox}[1]{title=#1,coltitle=unsw@black}
% secondary accent box
\newtcolorbox{myindigobox}[1]{title=#1,colback=unsw@indigo!20,colframe=unsw@indigo}
\newtcolorbox{myredbox}[1]{title=#1,colback=unsw@red!20,colframe=unsw@red,coltitle=unsw@black}
\newtcolorbox{mygreenbox}[1]{title=#1,colback=unsw@green!20,colframe=unsw@green,coltitle=unsw@black}
\newtcolorbox{mypinkbox}[1]{title=#1,colback=unsw@pink!20,colframe=unsw@pink,coltitle=unsw@black}
% tertiary accent box
\newtcolorbox{mytealbox}[1]{title=#1,colback=unsw@teal!20,colframe=unsw@teal}
\newtcolorbox{mybluebox}[1]{title=#1,colback=unsw@blue!20,colframe=unsw@blue,coltitle=unsw@black}
\newtcolorbox{mypurplebox}[1]{title=#1,colback=unsw@purple!20,colframe=unsw@purple}
\newtcolorbox{myorangebox}[1]{title=#1,colback=unsw@orange!20,colframe=unsw@orange,coltitle=unsw@black}

